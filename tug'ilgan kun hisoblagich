    <div class="container">
        <h1>ðŸŽ‚ Qancha Kun Yashaganman?</h1>
        <input type="date" id="birthdate" />
        <br>
        <button onclick="hisobla()">ðŸŽ‰ Hisobla!</button>
        <div id="result"></div>
    </div>

    <script>
        function hisobla() {
            const b = document.getElementById("birthdate").value;
            if (!b) return alert("Sanani tanlang!");

            const birth = new Date(b);
            const today = new Date();

            if (birth > today) return alert("Kelajakda tug'ilgan bo'la olmaysiz ðŸ˜‰");

            const days = Math.floor((today - birth) / (1000 * 60 * 60 * 24));
            const yrs = Math.floor(days / 365.25);
            const rem = Math.floor(days % 365.25);

            document.getElementById("result").innerHTML = `
                ðŸ’« Siz <strong>${days}</strong> kun yashadingiz!<br>
                Yoki <strong>${yrs} yil, ${rem} kun</strong> â€” ajoyib!
            `;
        }
    </script>
